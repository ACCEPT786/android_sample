<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonButtonStyle" parent="@style/BaseButtonStyle"/>

    <style name="CommonButtonStyle.Margin">
        <item name="android:layout_marginLeft">@dimen/xm_padding_horizontal</item>
        <item name="android:layout_marginTop">@dimen/xm_padding_vertical</item>
        <item name="android:layout_marginRight">@dimen/xm_padding_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/xm_padding_vertical</item>
    </style>


    <!--button-->
    <style name="CommonButtonTheme" parent="@style/BaseTheme">
        <item name="android:buttonStyle">@style/CommonButtonStyle</item>
        <item name="XmBtnCorners">@dimen/xm_button_corner</item>
        <item name="XmBtnColor">@color/common_btn_color</item>
        <item name="XmBtnPressed">@color/common_btn_pressed_color</item>
        <item name="XmBtnDisable">@color/common_btn_disable_color</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--红点textView样式-->
    <style name="CommonBadge">
        <item name="android:textSize">@dimen/xm_text_size_xs</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/remind_badge</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">20.0dip</item>
        <item name="android:minHeight">20.0dip</item>
    </style>
    <!--item layout样式，一般用于显示个人信息-->
    <style name="XmItemLayout">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>
    <style name="XmItemLayout.Padding">
        <item name="android:paddingLeft">@dimen/xm_item_layout_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/xm_item_layout_padding_vertical</item>
        <item name="android:paddingRight">@dimen/xm_item_layout_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/xm_item_layout_padding_vertical</item>
    </style>
    <!--item layout 标题样式-->
    <style name="ItemTitleText">
        <item name="android:textSize">@dimen/xm_text_size_m</item>
        <item name="android:textColor">@color/xm_text_primary</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">@dimen/item_title_min_width</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ItemTitleText.Flexible">
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <!--item layout 内容样式-->
    <style name="ItemContentText">
        <item name="android:textSize">@dimen/xm_text_size_m</item>
        <item name="android:textColor">@color/xm_text_secondary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginStart">@dimen/xm_padding_horizontal</item>
    </style>

    <style name="ItemContentText.RightIndicator">
        <item name="android:gravity">start|center</item>
        <item name="android:drawableRight">@drawable/ic_indicator_gray_right</item>
        <item name="android:drawablePadding">@dimen/xm_drawable_padding</item>
    </style>

    <style name="ItemContentText.Right" parent="@style/ItemContentText">
        <item name="android:gravity">end|center</item>
    </style>
    <style name="ItemContentText.Right.Indicator" parent="@style/ItemContentText.Right">
        <item name="android:drawableRight">@drawable/ic_indicator_gray_right</item>
        <item name="android:drawablePadding">@dimen/xm_drawable_padding</item>
    </style>

    <!--item layout提示语样式-->
    <style name="Tip">
        <item name="android:textSize">@dimen/xm_text_size_s</item>
        <item name="android:textColor">@color/xm_text_tertiary</item>
        <item name="android:background">@color/xm_background</item>
        <item name="android:paddingLeft">@dimen/xm_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/tip_padding_top</item>
        <item name="android:paddingRight">@dimen/xm_padding_horizontal</item>
        <item name="android:paddingBottom">@dimen/xm_padding_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--TabLayout样式-->
    <style name="XmTab">
