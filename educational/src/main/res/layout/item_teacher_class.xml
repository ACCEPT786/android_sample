<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/XmPadding"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvCourseName"
        style="@style/ItemText"
        android:drawablePadding="@dimen/xm_drawable_padding"
        android:layout_width="0.0dip"
        android:drawableStart="@drawable/img_course"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="数学普通班" />

    <TextView
        android:id="@+id/tvClassName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xm_text_vertical_space"
        android:drawableStart="@drawable/img_class"
        android:drawablePadding="@dimen/xm_drawable_padding"
        android:textColor="@color/xm_text_primary"
        android:textSize="@dimen/xm_text_size_m"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCourseName"
        tools:text="数学普通班" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/min_unit_4x"
        android:drawableStart="@drawable/img_student"
        android:drawablePadding="@dimen/xm_drawable_padding"
        android:textColor="@color/xm_text_primary"
        android:textSize="@dimen/xm_text_size_s"
        app:layout_constraintBottom_toBottomOf="@id/tvClassName"
        app:layout_constraintStart_toEndOf="@id/tvClassName"
        app:layout_constraintTop_toTopOf="@id/tvClassName"
        tools:text="2" />
</androidx.constraintlayout.widget.ConstraintLayout>